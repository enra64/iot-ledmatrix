<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TimePicker
        android:id="@+id/wakeup_light_time_picker"
        style="@style/TimePickerTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/wakeup_light_blendin_duration_spinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/available_wakeup_durations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wakeup_light_time_picker" />

    <Button
        android:id="@+id/wakeup_light_send_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.edmodo.rangebar.RangeBar xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wakeup_light_color_temperature_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/wakeup_light_color_temperature_upper_text_view"
        app:layout_constraintStart_toEndOf="@id/wakeup_light_color_temperature_lower_text_view"
        app:layout_constraintTop_toBottomOf="@+id/wakeup_light_blendin_duration_spinner"
        custom:barColor="@color/colorAccent"
        custom:barWeight="0dp"
        custom:connectingLineColor="@android:color/secondary_text_light_nodisable"
        custom:connectingLineWeight="0.5dp"
        custom:thumbColorNormal="@color/colorAccent"
        custom:thumbColorPressed="@color/colorAccent"
        custom:thumbRadius="3dp" />

    <TextView
        android:id="@+id/wakeup_light_color_temperature_upper_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="1800K"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wakeup_light_blendin_duration_spinner" />

    <TextView
        android:id="@+id/wakeup_light_color_temperature_lower_text_view"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="2800K"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wakeup_light_blendin_duration_spinner" />
</android.support.constraint.ConstraintLayout>